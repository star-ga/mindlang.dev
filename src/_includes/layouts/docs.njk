---
layout: layouts/base.njk
---
<div class="min-h-screen bg-white text-slate-900">
  <div class="flex flex-col-reverse md:flex-row max-w-8xl mx-auto">
    
    <!-- Sidebar -->
    <aside class="flex-shrink-0 bg-white w-full border-t border-slate-200 py-8 px-4 md:w-64 md:border-t-0 md:border-r md:h-[calc(100vh-4rem)] md:sticky md:top-16 md:py-8 md:pl-6 md:pr-4 md:overflow-y-auto">
      {% include "partials/docs-sidebar.njk" %}
    </aside>

    <!-- Main Content -->
    <main class="flex-1 min-w-0 py-10 px-4 md:px-12">
      
      <!-- Breadcrumbs -->
      <nav style="display: flex; align-items: center; font-size: 0.875rem; font-weight: 500; margin-bottom: 2rem;" aria-label="Breadcrumb">
        <!-- Home Link -->
        <a href="/" style="color: #4f46e5; text-decoration: none; transition: color 0.15s;" onmouseover="this.style.color='#3730a3'; this.style.textDecoration='underline';" onmouseout="this.style.color='#4f46e5'; this.style.textDecoration='none';">
          Home
        </a>

        <!-- Separator -->
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin: 0 0.5rem; color: #cbd5e1;"><polyline points="9 18 15 12 9 6"></polyline></svg>

        <!-- Dynamic Segments -->
        {% for crumb in helpers.getBreadcrumbs(page.url) %}
          {% if crumb.isLast %}
            <!-- Last Item: Grey Text -->
            <span style="color: #64748b;">{{ crumb.title }}</span>
          {% else %}
            <!-- Middle Item: Blue Link -->
            <a href="{{ crumb.href }}" style="color: #4f46e5; text-decoration: none; transition: color 0.15s;" onmouseover="this.style.color='#3730a3'; this.style.textDecoration='underline';" onmouseout="this.style.color='#4f46e5'; this.style.textDecoration='none';">
              {{ crumb.title }}
            </a>
            
            <!-- Separator -->
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin: 0 0.5rem; color: #cbd5e1;"><polyline points="9 18 15 12 9 6"></polyline></svg>
          {% endif %}
        {% endfor %}
      </nav>

      <!-- Page Content -->
      <div class="prose" style="max-width: none;">
        {{ content | safe }}
      </div>

      <!-- Docs Pagination -->
      {% set pagination = helpers.getDocsPagination(page.url, docs_navigation) %}
      {% if pagination.prev or pagination.next %}
      <div class="docs-pager">
        <!-- Previous Link -->
        {% if pagination.prev %}
        <a href="{{ pagination.prev.href }}" class="docs-pager-link">
          <div class="docs-pager-icon-box">
            <svg class="docs-pager-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </div>
          <div class="docs-pager-content">
            <div class="docs-pager-label">Previous</div>
            <div class="docs-pager-title">{{ pagination.prev.title }}</div>
          </div>
        </a>
        {% else %}
        <div class="docs-pager-spacer"></div>
        {% endif %}

        <!-- Next Link -->
        {% if pagination.next %}
        <a href="{{ pagination.next.href }}" class="docs-pager-link docs-pager-link--next">
          <div class="docs-pager-icon-box">
            <svg class="docs-pager-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </div>
          <div class="docs-pager-content">
            <div class="docs-pager-label">Next</div>
            <div class="docs-pager-title">{{ pagination.next.title }}</div>
          </div>
        </a>
        {% endif %}
      </div>
      {% endif %}
    </main>
  </div>
</div>
